section.intro.intro--variant--is-fullscreen.main-slider__parent
  .swiper.intro-slider
    .swiper-wrapper
      .swiper-slide
        img.intro-slider__image(src="assets/images/intro-layer.jpg" alt="Image" loading="lazy")
      .swiper-slide
        video(src="assets/images/vid.mp4" class="intro-slider__image" playsinline="true" loop="true" webkit-playsinline="true" autoplay="true" preload="auto" muted="muted")
