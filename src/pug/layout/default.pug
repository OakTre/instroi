include ../data/config.pug
include ../mixins/**/*.pug
include ../components/**/*.pug

block variables

doctype html
html(lang=siteLang)
  head
    +head()
  body(class=bodyClass)
    .page-wrapper
      block header
        +header()
      +mobile-menu()

      block content

      block footer
        +footer()

    .modal
      +modal()

  block scripts
    script(src="assets/js/main.js?v=" + siteVersion)
    script(src="assets/js/backend.js?v=" + siteVersion)
