mixin button(text, isIcon)
  button.ui-button&attributes(attributes)
    span.ui-button__text= text
    if isIcon
      span.ui-button__icon
        <svg class="icon" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M0 3H39.5" stroke="var(--color-icon)" stroke-width="0.5"/>
          <path d="M38 1L40 3L38 5" stroke="var(--color-icon)" stroke-width="0.5"/>
        </svg>
